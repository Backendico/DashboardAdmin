<UserControl x:Class="DashboardAdmin.Dashboard.Dashboard.SubpageStatices.SubpageStatices"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DashboardAdmin.Dashboard.Dashboard.SubpageStatices"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!--Column 1-->
        <Grid Margin="10,0" Grid.Column="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--Users-->
                <Border Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="2" Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!--Header-->
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Background="Gainsboro" >
                            <TextBlock FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Center" Text="Users"/>
                        </Border>

                        <!--value-->
                        <Border Grid.Row="2" Background="WhiteSmoke">
                            <TextBlock  FontSize="20" x:Name="TextUserCount" Text="xxx" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="1"/>
                        </Border>
                    </Grid>
                </Border>

                <!--Email-->
                <Border Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="2" Grid.Row="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <!--Header-->
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Background="Gainsboro" >
                            <TextBlock FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Center" Text="Emails"/>
                        </Border>

                        <!--RowTable-->
                        <Border Grid.Row="1" Background="Gainsboro">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,2,2"/>
                                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="0,0,0,2"/>

                                <TextBlock Text="Send" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="0"/>
                                <TextBlock Text="Registered" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="1"/>
                            </Grid>
                        </Border>

                        <!--value-->
                        <Border Grid.Row="2" Background="WhiteSmoke">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,2,0"/>

                                <TextBlock x:Name="TextEmail_Send" Text="xxx" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="0"/>
                                <TextBlock x:Name="TextEmailRegister_Count"  Text="xxx" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>


            </Grid>
        </Grid>

        <!--Colum 2-->
        <Grid Margin="10,0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <!--Bug Reports-->
            <Border Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="2" Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Header-->
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Background="Gainsboro" >
                        <TextBlock FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Center" Text="Bugs Report"/>
                    </Border>

                    <!--value-->
                    <Border Grid.Row="2" Background="WhiteSmoke">
                        <TextBlock x:Name="TextBugs" FontSize="20"  Text="xxx" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="1"/>
                    </Border>
                </Grid>
            </Border>


        </Grid>


        <!--Colum3-->
        <Grid Margin="10,0" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Supports-->
            <Border Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="2" Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Header-->
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Background="Gainsboro" >
                        <TextBlock FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Center" Text="Support"/>
                    </Border>

                    <!--value-->
                    <Border Grid.Row="2" Background="WhiteSmoke">
                        <TextBlock x:Name="TextSupportCount" FontSize="20"  Text="xxx" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="1"/>
                    </Border>
                </Grid>
            </Border>


        </Grid>

        <Grid  Margin="10,0" Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <!--Cashs-->
            <Border Margin="0,0,0,10" BorderBrush="Gray" BorderThickness="2" Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <!--Header-->
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Background="Gainsboro" >
                        <TextBlock FontWeight="Bold" VerticalAlignment="Center" TextAlignment="Center" Text="Cash"/>
                    </Border>

                    <!--value-->
                    <Border Grid.Row="2" Background="WhiteSmoke">
                        <TextBlock FontSize="20" x:Name="TextCash" Text="xxx" VerticalAlignment="Center" TextAlignment="Center" FontWeight="Bold" Grid.Column="0"/>
                    </Border>
                </Grid>
            </Border>


        </Grid>

    </Grid>
</UserControl>
